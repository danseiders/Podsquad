<!DOCTYPE html>
<html lang="en">
<head>
   <%- include('./partials/head.ejs') %>
</head>
<body class='index-body'>
    <header>
        <%- include('./partials/header.ejs') %>
        <nav>
            <%- include('./partials/nav.ejs') %>
        </nav>
    </header>
    <h1>Pods in your area!</h1>
    <div class="container-md index-main">
    <% for(let pod of pods) { %>
        <div class="pod-family">
            <img class="pod-image" src="<%= pod.photoURL %>">
            <h2><%= pod.familyName %></h2>
            <h3><%= pod.familyCount %></h3> 
            <p><%= pod.location %></p> 
        </div> 
    <% } %> 

    <footer>
        <%- include ('./partials/footer.ejs') %>
    </footer>
</body>
</html>